
<div class="jumbotron text-center">
        <h2><%= "#{@user.name}'s conversation history" %></h2>
</div>

    <div class="container">
      <ul class="list-group">
      <% @conversations.each do |user| %>


        <li class="list-group-item list-group-item-action" >
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-1"><%= "Convo with #{user.name}" %></h5>
              <small p-1><%= link_to "See conversation", conversation_path(user_id: user.id) %> <%= fa_icon "arrow-right" %></small>
            </div>
            <div class="d-flex">
              <small class="mb-1"><%= link_to "Last 30 days", conversation_path(user_id: user.id) %></small>
              <small class="px-1"> | </small>
              <small class="mb-1"><%= link_to "All messages", conversation_path(user_id: user.id) %></small>
            </div>
        </li>


  <% end %>
    </ul>
</div>





