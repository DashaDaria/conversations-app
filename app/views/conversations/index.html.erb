<div class="jumbotron text-center">
  <h2><%= "#{@user.name}'s conversation history" %></h2>
</div>

<div class="conversation-list container">
  <ul class="list-group">
    <% @conversations.each do |user| %>
      <li class="list-group-item list-group-item-action" >
        <div class="d-flex justify-content-between align-items-center">
          <h6 class="mb-1">Convo with <strong><%= user.name %></strong></h6>
          <small p-1><%= link_to "See conversation", conversation_path(user_id: user.id) %> <%= fa_icon "arrow-right" %></small>
        </div>
      </li>
    <% end %>
  </ul>
</div>
